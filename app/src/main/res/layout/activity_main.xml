<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c3eee7"
    android:orientation="vertical">

    <com.indris.material.RippleView
        android:id="@+id/btnTest"
        ripple:alphaFactor="0.4"
        ripple:hover="true"
        ripple:rippleColor="#58FAAC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/card_bk"
        android:gravity="center"
        android:padding="35dp"
        android:text="@string/test"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="149dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/btnUniver"
        android:layout_alignStart="@+id/btnUniver"
        android:layout_alignRight="@+id/btnUniver"
        android:layout_alignEnd="@+id/btnUniver" />
    <com.indris.material.RippleView
        android:id="@+id/btnUniver"
        ripple:alphaFactor="0.2"
        ripple:hover="true"
        ripple:rippleColor="#58FAAC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/card_bk"
        android:gravity="center"
        android:padding="35dp"
        android:text="@string/list_univer"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/btnTest"
        android:layout_centerHorizontal="true" />
</RelativeLayout>